{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "./dist",
    "rootDir": "./",
    "noEmit": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": [
    "server.ts",
    "lib/**/*",
    "prisma/**/*",
    "types/**/*",
    "socket-server.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "dist",
    "app"
  ]
}
