// File model - Store uploaded files
model File {
  id        String   @id @default(cuid())
  userId    String
  url       String
  key       String   // UploadThing key for deletion
  name      String
  size      Int
  type      String
  order     Int      @default(0) // Order of photos (0 = first/profile picture)
  createdAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([userId, order])
  @@index([createdAt])
}
